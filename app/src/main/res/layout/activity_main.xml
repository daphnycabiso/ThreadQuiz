<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.threadquiz.MainActivity">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/toggleButton"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_toEndOf="@+id/toggleButton"
        android:background="@android:color/holo_red_dark"
        android:layout_height="100dp"
        android:textAlignment="center" />

    <Button
        android:text="TRUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:id="@+id/trueBtn" />

    <Button
        android:text="FALSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trueBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/falseBtn" />

    <TextView
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvColorName"
        android:layout_below="@+id/tvCounter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_height="30dp"
        android:layout_width="50dp"
        android:layout_above="@+id/tvCounter"
        android:layout_toRightOf="@+id/tvCounter"
        android:layout_toEndOf="@+id/tvCounter" />

    <TextView
        android:text="SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_above="@+id/tvCounter"
        android:layout_toLeftOf="@+id/falseBtn"
        android:layout_toStartOf="@+id/falseBtn" />


</RelativeLayout>
